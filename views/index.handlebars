
<div class="site-wrapper">
    <div class="promo">
        <video autoplay="autoplay" controls loop>
            <source src="../img/frontPage_6.mp4" type="video/mp4">
        </video>
        <div class="container">
            <div class="site-wrapper-inner">

                <div class="class-container">

                    <div class="masthead clearfix">
                    <div class="inner">
                        <img class="masthead-brand" id="logo" src="/img/logo.png" alt="logo">
                        <!--<h3 class="masthead-brand">Trekmate</h3>-->
                    <nav>
                    <ul class="nav masthead-nav">
                        {{#if user }}
                            <li class="active">
                                <button type="button" class="btn btn-primary" onclick="location.href = '/dashboard';">
                                    Your Trips
                                </button>
                            </li>
                            <li class="active">
                                <button type="button" class="btn btn-primary" onclick="location.href = '/logout';">Log
                                    Out
                                </button>
                            </li>
                        {{else}}
                            <li class="active">
                                <button type="button" class="btn btn-primary" data-toggle="modal"
                                        data-target="#signInModal">Sign in
                                </button>
                            </li>
                            <li>
                                <button type="button" class="btn btn-primary" data-toggle="modal"
                                        data-target="#signUpModal">Sign Up
                                </button>
                            </li>
                            <li>
                                <button type="button" class="btn btn-primary" data-toggle="modal"
                                        data-target="#aboutModal">About
                                </button>
                        </div>
                            </li>
                        {{/if}}
                        </ul>
                        </nav>
                    </div>
                </div>

                <div class="mastfoot">
                    <div class="inner">
                        <p>Copyright &copy; 2017 Trekmate </p>
                    </div>
                </div>
            </div>
        </div>

        {{> page/signIn }}
        {{> page/signUpForm }}


    </div>
</div>
